<% if user_signed_in? %>



<table class="table table-striped table-bordered  table-hover ">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @staffs.each do |staff| %>
    <% if staff.user == current_user %>
      <tr>
        <td><%= link_to staff.firs_name + ' ' +  staff.last_name, staff %></td>
        <td><%= staff.email %></td>
        <td><%= staff.phone %></td>
        <td><%= staff.twitter %></td>
        
        
        
        <td><%= link_to 'Delete', staff, method: :delete, data: { confirm: 'Are you sure?'}, class:'btn btn-outline-danger btn-sm' %></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Staff', new_staff_path,  class:'btn btn-dark'%>
<%else%>
<h3>Kindly login to view staffs.....or simply sign up</h3>
<%end%>
